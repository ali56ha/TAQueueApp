<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        style="@style/BannerTextTheme"
        android:id="@+id/selected_class_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Select your class"
        style="@style/SubBannerTextTheme"/>

    <ListView
        style="@style/ListViewAppTheme"
        android:id="@+id/class_list_view"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tab_host_default_height"
        android:layout_marginBottom="@dimen/tab_host_default_height"
        android:layout_marginLeft="@dimen/tab_host_default_height"
        android:layout_marginRight="@dimen/tab_host_default_height">

    </ListView>


</LinearLayout>


